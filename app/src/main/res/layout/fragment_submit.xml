<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitFragment">


    <TextView
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answered          : "
        android:textSize="24sp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/totalans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignParentEnd="true"
        android:text="0/10"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/bookmarkno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no"
        android:text="Bookmarked      : "
        android:textSize="24sp"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/totalbookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/totalans"
        android:text="0dp"
        android:layout_margin="20dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/totalbookmark"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/Q1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/Q2"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/Q3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/Q4"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/Q5"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll1"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/Q6"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/Q7"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/Q8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/Q9"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/Q10"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            />

    </LinearLayout>

</RelativeLayout>